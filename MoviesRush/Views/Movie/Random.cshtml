@model MoviesRush.ViewModels.RandomMovieViewModel

@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customer.Count > 5 ? "popular" : null;
}

<h2>Random</h2>

<div>
    <h4 class="@className">@Model.Movie.Name</h4>
    @if (Model.Customer.Count == 0)
    {
        <text>No one has rented this movie before</text>
    }
    else
    {
        <ul>
            @foreach (var customer in Model.Customer)
            {
                <li>@customer.FirstName</li>
            }
        </ul>
    }
</div>
<div>
    <a asp-action="Edit">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
